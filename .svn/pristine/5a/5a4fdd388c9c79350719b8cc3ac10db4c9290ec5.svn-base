<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#CCCCCC" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@layout/style_header"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <Button
            android:id="@+id/btn_form_produtos_voltar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@layout/style_button_head"
            android:minHeight="50dip"
            android:text="@string/voltar"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="128dp"
            android:layout_height="44dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/produto"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="16sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/frame_direita_produto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </FrameLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:background="#CCCCCC"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCCCCC"
            android:focusableInTouchMode="true"
            android:gravity="left" >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="@string/codigo"
                android:textColor="#372c24" />

            <TextView
                android:id="@+id/TextView022"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/edit_produto_codigo"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/descricao"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/edit_produto_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/TextView022"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@layout/style_edittext"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:singleLine="true" />

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/edit_produto_descricao"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/unidade"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/edit_produto_unidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/TextView03"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@layout/style_edittext"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:singleLine="true" />

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/edit_produto_unidade"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/estoque"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/edit_produto_estoque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/TextView05"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@layout/style_edittext"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:singleLine="true" />

            <TextView
                android:id="@+id/textView_preco_produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/edit_produto_estoque"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/preco"
                android:textColor="#372c24" />

            <EditText
                android:id="@+id/edit_produto_codigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/TextView02"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@layout/style_edittext"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:singleLine="true" >
            </EditText>

            <TextView
                android:id="@+id/textView_produto_precos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_preco_produto"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#372c24"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>