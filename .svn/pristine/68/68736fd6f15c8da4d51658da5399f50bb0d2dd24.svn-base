<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
       <shape>
		    <gradient
		        android:startColor="#5F9CC5"        
		        android:endColor="#396B9E"
		        android:angle="270"/>		   
		</shape>        
    </item>
    
    <item android:state_focused="true" >        
        <shape>
		    <gradient
		        android:startColor="#5F9CC5"        
		        android:endColor="#396B9E"
		        android:angle="270"/>		   
		</shape>                
    </item>
    
    <item>        
        <shape>
		    <gradient
		        android:startColor="#5F9CC5"        
		        android:endColor="#396B9E"
		        android:angle="270"/>
		    <corners android:radius="10dp" />
		    <stroke	
           		android:width="0.8dp"
                android:color="#044062" />
		</shape>        
    </item>   
</selector>
