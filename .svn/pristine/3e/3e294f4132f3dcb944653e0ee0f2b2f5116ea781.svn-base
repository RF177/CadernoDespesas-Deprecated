<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
       <shape>
            <corners android:radius="10dp" />
		    <gradient
		        android:startColor="#0971A5"        
		        android:endColor="#0971A5"
		        android:angle="270"/>
		    <stroke	
           		android:width="0.8dp"
                android:color="#044062" />		    		    		  
		</shape>        
    </item>
    
    <item android:state_focused="true" >        
        <shape>
            <corners android:radius="10dp" />
		    <gradient
		        android:startColor="#0971A5"        
		        android:endColor="#0971A5"
		        android:angle="270"/>
 		   	<stroke	
           		android:width="0.8dp"
                android:color="#044062" />
		</shape>                
    </item>
    
    <item>        
        <shape>
		    <gradient
		        android:startColor="#0B91D4"        
		        android:endColor="#07628F"
		        android:angle="270"/>
		    <corners android:radius="10dp" />
		    <stroke	
           		android:width="0.8dp"
                android:color="#044062" />
		</shape>        
    </item>   
</selector>
